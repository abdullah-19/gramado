
# init process
# It's is a ring3 process used to initialize the system.

VERSION = 0
PATCHLEVEL = 1
SUBLEVEL = 0
EXTRAVERSION =
#NAME = Init


CFLAGS = -m32 \
	--std=gnu89 \
	-nodefaultlibs \
	-nostdinc \
	-nostdlib \
	-static \
	-fgnu89-inline \
	-ffreestanding \
	-fno-builtin \
	-fno-pie \
	-no-pie \
	-fno-stack-protector \
	-s
	
	

LIBC    = ../../../lib/gramlibs/libc02/include/
LIBCOBJ = ../../../lib/gramlibs/libc02/obj
API01   = ../../../lib/gramlibs/api02/include/
APIOBJ  = ../../../lib/gramlibs/api02/obj


	##
	## Objects
	##

myObjects = crt0.o \
main.o \
api.o \
ctype.o \
stdio.o \
stdlib.o \
string.o \
conio.o \
unistd.o \
stubs.o    



.PHONY: all all-c shell-link finalize clean

all: crt0.o main.o all-c shell-link finalize clean
	@echo "Init Ok?"

head.o:
#	nasm  head.s  -felf -o head.o

crt0.o:
	gcc  -c  crt0.c -I $(LIBC) -I $(API01) $(CFLAGS) -o crt0.o

main.o:
	gcc  -c  main.c -I $(LIBC) -I $(API01) $(CFLAGS) -o main.o

all-c:
#todo:
#	gcc  -c  shellui.c   -I ../../include/libc/ $(CFLAGS) -o shellui.o
#	gcc  -c  builtins.c  -I ../../include/libc/ $(CFLAGS) -o builtins.o
#	gcc  -c  desktop.c   -I ../../include/libc/ $(CFLAGS) -o desktop.o
#	gcc  -c  parser.c    -I ../../include/libc/ $(CFLAGS) -o parser.o
#	gcc  -c  lexer.c     -I ../../include/libc/ $(CFLAGS) -o lexer.o
#	gcc  -c  net.c       -I ../../include/libc/ $(CFLAGS) -o net.o
#	gcc  -c  terminal.c  -I ../../include/libc/ $(CFLAGS) -o terminal.o


	cp $(APIOBJ)/api.o .


	cp $(LIBCOBJ)/ctype.o .
	cp $(LIBCOBJ)/stdio.o .
	cp $(LIBCOBJ)/stdlib.o .
	cp $(LIBCOBJ)/string.o .
	cp $(LIBCOBJ)/conio.o .
	cp $(LIBCOBJ)/unistd.o .
	cp $(LIBCOBJ)/stubs.o .



shell-link:
	ld -m elf_i386 -T link.ld -o INIT.BIN $(myObjects) -Map map.s


finalize:
	cp INIT.BIN ../../../bin/boot/

clean:
	-rm *.o
	-rm INIT.BIN 
	
	
